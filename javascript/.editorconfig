# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.py]
max_line_length = 110
indent_size = 4

[*.{groovy,java,kt,xml}]
indent_size = 4
continuation_indent_size = 8

[docs/**.txt]
max_line_length = 110
